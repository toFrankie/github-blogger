{
  "name": "github-blogger",
  "displayName": "Github Blogger",
  "description": "Use GitHub Issue as your blog",
  "version": "1.0.0",
  "publisher": "Frankie",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Notebooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/toFrankie/github-blogger.git"
  },
  "activationEvents": [],
  "main": "./dist/extension/index.js",
  "icon": "./images/icon.png",
  "contributes": {
    "configuration": {
      "title": "GitHub Blogger",
      "properties": {
        "github-blogger.token": {
          "type": "string",
          "description": "Your GitHub Personal Access Token",
          "default": ""
        },
        "github-blogger.user": {
          "type": "string",
          "description": "Your GitHub Username",
          "default": ""
        },
        "github-blogger.repo": {
          "type": "string",
          "description": "Your Blog Repository Name",
          "default": ""
        },
        "github-blogger.branch": {
          "type": "string",
          "description": "Your Blog Repository Branch Name",
          "default": "main"
        }
      }
    },
    "commands": [
      {
        "command": "github-blogger.open-dev",
        "title": "Open Github Blogger (Dev)"
      },
      {
        "command": "github-blogger.config",
        "title": "Config Github Blogger"
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "package": "vsce package --no-dependencies",
    "prepackage": "build",
    "lint": "run-s lint:eslint lint:prettier lint:stylelint tsc",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --cache --fix",
    "lint:prettier": "prettier . '!**/pnpm-lock.yaml' --cache --write",
    "lint:stylelint": "stylelint 'src/**/*.css' --cache --fix",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@ifanrx/eslint-config-standard-react": "^1.3.0",
    "@ifanrx/eslint-config-standard-ts": "^1.3.0",
    "@ifanrx/prettier-config-standard": "^1.2.0",
    "@ifanrx/stylelint-config-standard": "^2.1.0",
    "@tomjs/tsconfig": "^1.7.1",
    "@tomjs/vite-plugin-vscode": "^3.2.1",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/vscode": "^1.98.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^8.57.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.2",
    "stylelint": "^16.15.0",
    "typescript": "^5.3.3",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@bytemd/plugin-breaks": "^1.22.0",
    "@bytemd/plugin-frontmatter": "^1.22.0",
    "@bytemd/plugin-gemoji": "^1.22.0",
    "@bytemd/plugin-gfm": "^1.22.0",
    "@bytemd/plugin-highlight": "^1.22.0",
    "@bytemd/plugin-math": "^1.22.0",
    "@bytemd/plugin-medium-zoom": "^1.22.0",
    "@bytemd/plugin-mermaid": "^1.22.0",
    "@bytemd/react": "^1.22.0",
    "@octokit/core": "^5.2.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "antd": "^5.24.3",
    "buffer": "^6.0.3",
    "bytemd": "^1.22.0",
    "core-js": "^3.41.0",
    "dayjs": "^1.11.13",
    "github-markdown-css": "^5.8.1",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "js-base64": "^3.7.7",
    "licia-es": "^1.47.0",
    "mobx": "^6.13.6",
    "mobx-react-lite": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vscode-webview-rpc": "^0.0.4"
  }
}
